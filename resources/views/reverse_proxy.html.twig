{% extends 'layout.html.twig' %}
{% set active2 = slug|default('private') %}

{% block content %}

    <div class="navbar nav-stacked">
        <div class="navbar-inner">
            <div class="container">
                <div class="nav-collapse">
                    <ul class="nav">

                        <li {% if 'private' == active2 %}class="active"{% endif %}><a href="{{ path('reverse_proxy_slug', {'slug': 'private'}) }}">Private</a></li>
                        <li {% if 'public' == active2 %}class="active"{% endif %}><a href="{{ path('reverse_proxy_slug', {'slug': 'public'}) }}">Public</a></li>
                        <li {% if 'nocache' == active2 %}class="active"{% endif %}><a href="{{ path('reverse_proxy_slug', {'slug': 'nocache'}) }}">No Cache</a></li>
                        <li {% if 'private_no_expire' == active2 %}class="active"{% endif %}><a href="{{ path('reverse_proxy_slug', {'slug': 'private_no_expire'}) }}">Private No Expire</a></li>
                        <li {% if 'esi_with_dynamic_box' == active2 %}class="active"{% endif %}><a href="{{ path('reverse_proxy_slug', {'slug': 'esi_with_dynamic_box'}) }}">ESI With Dynamic Box</a></li>
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </div>
    </div>

    <div class="label label-important">
        Datetime: {{ datetime }}
    </div>

    <div class="page-header">
        <h2>Request Headers</h2>
    </div>
    <div class="well">
	{{ request_headers|nl2br }}
    </div>

    <div class="page-header">
        <h2>Response Headers</h2>
    </div>
    <div class="well">
	{{ response_headers|nl2br }}
    </div>
{% endblock %}
