{% extends 'layout.html.twig' %}
{% set active2 = slug|default('exp-cc-private') %}

{% block content %}

    <div class="navbar nav-stacked">
        <div class="navbar-inner">
            <div class="container">
                <div class="nav-collapse">
                    <ul class="nav">

                        <li {% if 'exp-basic' == active2 %}class="active"{% endif %}><a href="{{ path('reverse_proxy_slug', {'slug': 'exp-basic'}) }}">Expire</a></li>
                        <li {% if 'exp-cc-private' == active2 %}class="active"{% endif %}><a href="{{ path('reverse_proxy_slug', {'slug': 'exp-cc-private'}) }}">Private</a></li>
                        <li {% if 'exp-cc-public' == active2 %}class="active"{% endif %}><a href="{{ path('reverse_proxy_slug', {'slug': 'exp-cc-public'}) }}">Public</a></li>
                        <li {% if 'exp-cc-nocache' == active2 %}class="active"{% endif %}><a href="{{ path('reverse_proxy_slug', {'slug': 'exp-cc-nocache'}) }}">No Cache</a></li>
                        <li {% if 'exp-cc-maxage' == active2 %}class="active"{% endif %}><a href="{{ path('reverse_proxy_slug', {'slug': 'exp-cc-maxage'}) }}">Max Age</a></li>
                        <li {% if 'exp-cc-smaxage' == active2 %}class="active"{% endif %}><a href="{{ path('reverse_proxy_slug', {'slug': 'exp-cc-smaxage'}) }}">Shared Max Age</a></li>
                        <li {% if 'exp-cc-mixed' == active2 %}class="active"{% endif %}><a href="{{ path('reverse_proxy_slug', {'slug': 'exp-cc-mixed'}) }}">Mixing</a></li>
                        <li {% if 'val-etag' == active2 %}class="active"{% endif %}><a href="{{ path('reverse_proxy_slug', {'slug': 'val-etag'}) }}">Etag</a></li>
                        <li {% if 'val-lastmod' == active2 %}class="active"{% endif %}><a href="{{ path('reverse_proxy_slug', {'slug': 'val-lastmod'}) }}">Last-Modified</a></li>
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </div>
    </div>

    <div class="label label-important">
        Page generated on {{ datetime }}
    </div>

    <div>
	<h2>{{ lesson_title }}</h2>
	{{ lesson|raw|nl2br }}
	<p><a href="{{ lesson_link }}">Read more...</a></p>
    </div>

    <div class="page-header">
        <h3>Response Headers</h3>
    </div>
    <div class="well">
	      {{ response_headers|nl2br }}
    </div>

    <div class="page-header">
        <h3>Request Headers</h3>
    </div>
    <div class="well">
	      {{ request_headers|nl2br }}
    </div>

{% endblock %}
